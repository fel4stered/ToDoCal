    <!--#region ContextMenu -->
    <ControlTemplate TargetType="{x:Type MenuItem}" x:Key="MenuItemTemplate">
        <Grid Width="160">
            <Border x:Name="MenuItemBorder" Margin="2 2 2 2" Width="100" CornerRadius="10 0 10 0" Background="#9E30C5" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Padding="5" Text="{Binding Header, RelativeSource={RelativeSource AncestorType={x:Type MenuItem}}}" Foreground="White" FontFamily="bahnschrift" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                    Storyboard.TargetName="MenuItemBorder"
                                    Storyboard.TargetProperty="Width"
                                    RepeatBehavior="1x"
                                    From="100" To="120" Duration="0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                    Storyboard.TargetName="MenuItemBorder"
                                    Storyboard.TargetProperty="Width"
                                    RepeatBehavior="1x"
                                    From="120" To="100" Duration="0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style TargetType="{x:Type ContextMenu}" x:Key="ContextMenuStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContextMenu}">
                    <Border CornerRadius="5" BorderBrush="#9E30C5" BorderThickness="0" Background="Transparent" SnapsToDevicePixels="True">
                        <ItemsPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

